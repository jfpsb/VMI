<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntima"
                   namespace="VandaModaIntima.Model">

  <class name="Marca" table="marca" dynamic-insert="true" dynamic-update="true">
    <id name="Id" column="id" />
    <property name="Nome" column="nome" />
    <bag name="Produtos" table="produto" lazy="true" inverse="true">
      <key column="marca" />
      <one-to-many class="Produto" />
    </bag>
  </class>

</hibernate-mapping>
