<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SincronizacaoVMI"
                   namespace="SincronizacaoVMI.Model">

	<class name="ProdutoGrade" table="produto_grade">
		<cache usage="read-write"/>
		<id name="Id" type="Int32">
			<generator class="native" />
		</id>
		<property name="Uuid" />
		<many-to-one name="Produto" class="SincronizacaoVMI.Model.Produto" column="produto" />
		<property name="CodBarra" column="cod_barra" />
		<property name="CodBarraAlternativo" column="cod_barra_alternativo" />
		<property name="Preco" column="preco_venda" />
		<property name="PrecoCusto" column="preco_custo" />
		<property name="CriadoEm" />
		<property name="ModificadoEm" />
		<property name="DeletadoEm" />
		<property name="Deletado" />
		<bag name="SubGrades" table="sub_grade" inverse="true" where="Deletado = false" cascade="all-delete-orphan" lazy="false">
			<key column="produto_grade" />
			<one-to-many class="SincronizacaoVMI.Model.SubGrade"/>
		</bag>
		<bag name="Historico" table="historico_produto_grade" inverse="true" where="Deletado = false" cascade="all-delete-orphan">
			<key column="produto_grade" />
			<one-to-many class="SincronizacaoVMI.Model.HistoricoProdutoGrade"/>
		</bag>
	</class>

</hibernate-mapping>
