<view:APesquisarView xmlns:view="clr-namespace:VandaModaIntimaWpf.View"
                     x:Class="VandaModaIntimaWpf.ViewModel.Fornecedor.PesquisarFornecedor"
                     x:Name="TelaPesquisarFornecedor"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:VandaModaIntimaWpf.ViewModel.Fornecedor"
                     xmlns:ViewModel="clr-namespace:VandaModaIntimaWpf.ViewModel.Fornecedor"
                     mc:Ignorable="d"
                     Title="Pesquisar Fornecedor"
                     Height="540"
                     Width="960"
                     WindowStartupLocation="CenterScreen"
                     Icon="/Resources/Fornecedor_Icon.ico"
                     Closing="Pesquisar_Closing">
    <view:APesquisarView.DataContext>
        <ViewModel:PesquisarFornecedorViewModel />
    </view:APesquisarView.DataContext>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Right">
                <Label Content="{Binding StatusBarText}"
                       FontSize="15" />
            </StatusBarItem>
        </StatusBar>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Opções">
                <MenuItem Header="Cadastrar Novo"
                          Command="{Binding AbrirCadastrarComando}">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Adicionar.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Importar">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Importar.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="Excel (*.xlsx)"
                              Command="{Binding ImportarExcelComando}"
                              CommandParameter="{Binding ElementName=TelaPesquisarFornecedor}" />
                    <MenuItem Header="Json (*.json)" />
                    <MenuItem Header="Xml (*.xml)" />
                </MenuItem>
                <MenuItem Header="Exportar">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Exportar.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="Excel (*.xlsx)"
                              Command="{Binding ExportarExcelComando}" />
                    <MenuItem Header="Json (*.json)" />
                    <MenuItem Header="Xml (*.xml)" />
                </MenuItem>
                <MenuItem Header="Ajuda">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Ajuda.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Sair"
                          Command="{Binding FecharTelaComando}"
                          CommandParameter="{Binding ElementName=TelaPesquisarFornecedor}" />
            </MenuItem>
        </Menu>
        <Button DockPanel.Dock="Bottom"
                Padding="10px"
                Margin="5,0,5,5"
                Content="Apagar Fornecedores Marcados"
                HorizontalAlignment="Right"
                Visibility="{Binding VisibilidadeBotaoApagarSelecionado}"
                Command="{Binding ApagarMarcadosComando}"
                CommandParameter="{Binding ElementName=TelaPesquisarFornecedor}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="85" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.ColumnSpan="2">Pesquisar Por:</Label>
            <ComboBox Grid.Column="2"
                      Width="200"
                      SelectedIndex="{Binding PesquisarPor, Mode=TwoWay}"
                      ItemsSource="{StaticResource CmbPesquisaFornecedorItems}"
                      HorizontalAlignment="Left"
                      Margin="5,5,0,5" />
            <Label Grid.Row="1"
                   Grid.ColumnSpan="2">Pesquisa:</Label>
            <TextBox Grid.Row="1"
                     Grid.Column="2"
                     Text="{Binding TermoPesquisa, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                     Name="TxtPesquisa" />
            <DataGrid Grid.Row="2"
                      Grid.ColumnSpan="3"
                      AutoGenerateColumns="False"
                      Name="DataGridFornecedor"
                      AlternatingRowBackground="White"
                      ItemsSource="{Binding Fornecedores, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding FornecedorSelecionado, Mode=OneWayToSource}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}"
                                          Command="{Binding DataContext.ChecarItensMarcadosComando, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PesquisarFornecedor}}}">

                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="CNPJ"
                                        IsReadOnly="True"
                                        Binding="{Binding Entidade.Cnpj}"
                                        Width="*">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="ToolTip"
                                        Value="{Binding Entidade.Cnpj}" />
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Nome"
                                        IsReadOnly="True"
                                        Binding="{Binding Entidade.Nome}"
                                        Width="*">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="ToolTip"
                                        Value="{Binding Entidade.Nome}" />
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Nome Fantasia"
                                        IsReadOnly="True"
                                        Binding="{Binding Entidade.NomeFantasia}"
                                        Width="*">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="ToolTip"
                                        Value="{Binding Entidade.NomeFantasia}" />
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Email"
                                        IsReadOnly="True"
                                        Binding="{Binding Entidade.Email}"
                                        Width="*">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="ToolTip"
                                        Value="{Binding Entidade.Email}" />
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu FontSize="14px">
                        <MenuItem Header="{Binding FornecedorSelecionadoNome}"
                                  IsHitTestVisible="False"
                                  Focusable="False"
                                  FontWeight="Bold" />
                        <Separator />
                        <MenuItem Header="Editar"
                                  Command="{Binding AbrirEditarComando}" />
                        <MenuItem Header="Apagar"
                                  Command="{Binding AbrirApagarComando}"
                                  CommandParameter="{Binding ElementName=TelaPesquisarFornecedor}" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
    </DockPanel>
</view:APesquisarView>
