<Window x:Class="VandaModaIntimaWpf.View.Produto.AjudaProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ajuda"
        Width="1200"
        Height="675"
        Icon="/Resources/Produto_Icon.ico"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl FontSize="15">
            <TabItem Header="Excel">
                <Image Source="/Resources/AjudaProdutoExcel.png"
                       Width="Auto"
                       VerticalAlignment="Top"
                       Margin="30,15,30,15" />
            </TabItem>
            <TabItem Header="Cadastrar Novo"></TabItem>
            <TabItem Header="Editar"></TabItem>
            <TabItem Header="Apagar"></TabItem>
            <TabItem Header="Apagar Vários"></TabItem>
        </TabControl>
    </Grid>
</Window>
