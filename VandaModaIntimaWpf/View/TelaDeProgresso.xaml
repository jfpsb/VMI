<Window x:Class="VandaModaIntimaWpf.View.TelaDeProgresso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VandaModaIntimaWpf.View"
        mc:Ignorable="d"
        Title="{Binding TituloTelaProgresso}"
        Height="Auto"
        Width="600"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar Value="{Binding ValorBarraProgresso}"
                     Margin="10"
                     Maximum="100" />
        <Label Content="{Binding ValorBarraProgresso}"
               FontSize="16"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               ContentStringFormat="{}{0:#}%" />
        <TextBox Grid.Row="1"
                 Margin="10,0, 10,10"
                 BorderBrush="Transparent"
                 Text="{Binding DescricaoBarraProgresso}"
                 FontSize="16"
                 TextWrapping="Wrap"
                 IsReadOnly="True" />
    </Grid>
</Window>
