<Application x:Class="VandaModaIntimaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="View/VandaModaIntima.xaml">
    <Application.Resources>

        <Style x:Key="Fonte"
               TargetType="{x:Type Control}">
            <Setter Property="FontFamily"
                    Value="Century Gothic" />
        </Style>

        <Style x:Key="FonteFrameworkElement"
               TargetType="{x:Type FrameworkElement}">
            <Setter Property="TextElement.FontFamily"
                    Value="Century Gothic" />
        </Style>

        <Style TargetType="Button"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="16" />
        </Style>

        <Style TargetType="StatusBar"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="CadetBlue" />
        </Style>

        <Style x:Key="BotaoCadastrar"
               TargetType="Button"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="30,10,30,10" />
        </Style>

        <Style TargetType="Menu"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="DockPanel.Dock"
                    Value="Top" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="BorderThickness"
                    Value="1" />
        </Style>

        <Style TargetType="DataGrid"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="CanUserAddRows"
                    Value="False" />
            <Setter Property="AutoGenerateColumns"
                    Value="False" />
            <Setter Property="RowHeaderWidth"
                    Value="0" />
            <Style.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight"
                            Value="Bold" />
                    <Setter Property="FontSize"
                            Value="18" />
                    <Setter Property="Background"
                            Value="DarkGray" />
                    <Setter Property="Height"
                            Value="35" />
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background"
                            Value="LightGray" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin"
                            Value="5" />
                    <Setter Property="Padding"
                            Value="5" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Grid"
               BasedOn="{StaticResource FonteFrameworkElement}">
            <Style.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Margin"
                            Value="5" />
                    <Setter Property="Padding"
                            Value="5" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="TextBox"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>

        <Style TargetType="ComboBox"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>

        <Style TargetType="Label"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>

        <Style x:Key="BotoesTelaInicial"
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Background"
                    Value="AliceBlue" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="Black" />
            <Style.Resources>
                <Style TargetType="Label">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                </Style>
            </Style.Resources>
        </Style>

        <x:Array x:Key="CmbPesquisaProdutoItems"
                 Type="sys:String">
            <sys:String>Descrição</sys:String>
            <sys:String>Cód. De Barras</sys:String>
            <sys:String>Fornecedor</sys:String>
            <sys:String>Marca</sys:String>
        </x:Array>

        <x:Array x:Key="CmbPesquisaFornecedorItems"
                 Type="sys:String">
            <sys:String>CNPJ</sys:String>
            <sys:String>Nome</sys:String>
            <sys:String>Nome Fantasia</sys:String>
            <sys:String>Email</sys:String>
        </x:Array>

    </Application.Resources>
</Application>
