<Application x:Class="VandaModaIntimaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:View="clr-namespace:VandaModaIntimaWpf.View"
             StartupUri="View/VandaModaIntima.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Linguagem/EN-US.xaml" />
                <ResourceDictionary Source="Resources/Linguagem/PT-BR.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="Fonte"
                   TargetType="{x:Type Control}">
                <Setter Property="FontFamily"
                        Value="Century Gothic" />
            </Style>

            <Style x:Key="FonteFrameworkElement"
                   TargetType="{x:Type FrameworkElement}">
                <Setter Property="TextElement.FontFamily"
                        Value="Century Gothic" />
            </Style>

            <Style TargetType="Button"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="Margin"
                        Value="5" />
            </Style>

            <Style TargetType="StatusBar"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="BorderThickness"
                        Value="1" />
                <Setter Property="BorderBrush"
                        Value="CadetBlue" />
            </Style>

            <Style x:Key="BotaoCadastrar"
                   TargetType="Button"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="18" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Padding"
                        Value="30,10,30,10" />
                <Setter Property="Margin"
                        Value="5" />
            </Style>

            <Style TargetType="Menu"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="DockPanel.Dock"
                        Value="Top" />
                <Setter Property="Padding"
                        Value="5" />
                <Setter Property="BorderThickness"
                        Value="1" />
            </Style>

            <Style TargetType="DataGrid"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="CanUserAddRows"
                        Value="False" />
                <Setter Property="AutoGenerateColumns"
                        Value="False" />
                <Setter Property="RowHeaderWidth"
                        Value="0" />
                <Style.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="FontSize"
                                Value="18" />
                        <Setter Property="Background"
                                Value="DarkGray" />
                        <Setter Property="Height"
                                Value="35" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background"
                                Value="LightGray" />
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin"
                                Value="5" />
                        <Setter Property="Padding"
                                Value="5" />
                    </Style>
                </Style.Resources>
            </Style>

            <Style TargetType="Grid"
                   BasedOn="{StaticResource FonteFrameworkElement}">
                <Style.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin"
                                Value="5" />
                        <Setter Property="Padding"
                                Value="5" />
                    </Style>
                </Style.Resources>
            </Style>

            <Style TargetType="TextBox"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>

            <Style TargetType="ComboBox"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="Padding"
                        Value="5" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>

            <Style TargetType="DatePicker"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="Padding"
                        Value="5" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>

            <Style TargetType="Label"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>

            <Style x:Key="BotoesTelaInicial"
                   TargetType="{x:Type Button}"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="FontSize"
                        Value="20" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="Background"
                        Value="AliceBlue" />
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="BorderThickness"
                        Value="1" />
                <Setter Property="BorderBrush"
                        Value="Black" />
                <Style.Resources>
                    <Style TargetType="Label">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="ContextMenuItemStyle"
                   TargetType="MenuItem">
                <Setter Property="FontSize"
                        Value="14px" />
                <Setter Property="Padding"
                        Value="0,4,4,4" />
            </Style>

            <ControlTemplate x:Key="TelaPesquisaMenu"
                             TargetType="View:TelaPesquisaMenu">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="{DynamicResource opcoes}">
                        <MenuItem Header="{DynamicResource cadastrar_novo}"
                                  Command="{Binding AbrirCadastrarComando}"
                                  ItemsSource="{Binding CadastrarNovoMenuItems}">
                            <MenuItem.Icon>
                                <Image Source="/Resources/Adicionar.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{DynamicResource importar}">
                            <MenuItem.Icon>
                                <Image Source="/Resources/Importar.png" />
                            </MenuItem.Icon>
                            <MenuItem Header="Excel (*.xlsx)"
                                      Command="{Binding ImportarExcelComando}"
                                      CommandParameter="{TemplateBinding CommandParameter}" />
                        </MenuItem>
                        <MenuItem Header="{DynamicResource exportar}">
                            <MenuItem.Icon>
                                <Image Source="/Resources/Exportar.png" />
                            </MenuItem.Icon>
                            <MenuItem Header="Excel (*.xlsx)"
                                      Command="{Binding ExportarExcelComando}" />
                            <MenuItem Header="SQL (*.sql)"
                                      Command="{Binding ExportarSQLComando}" />
                        </MenuItem>

                        <ItemsPresenter />

                        <MenuItem Header="{DynamicResource ajuda}"
                                  Command="{Binding AbrirAjudaComando}">
                            <MenuItem.Icon>
                                <Image Source="/Resources/Ajuda.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </ControlTemplate>

            <ControlTemplate x:Key="PesquisaDataGridContextMenu"
                             TargetType="{x:Type ContextMenu}">
                <Border Background="Red"
                        BorderThickness="3"
                        Panel.ZIndex="1">
                    <Border.BitmapEffect>
                        <DropShadowBitmapEffect Color="Black"
                                                Direction="-45"
                                                ShadowDepth="10"
                                                Opacity="0.5" />
                    </Border.BitmapEffect>
                    <StackPanel Background="{TemplateBinding Background}">
                        <MenuItem Header="{Binding EntidadeSelecionada.Entidade.GetContextMenuHeader}"
                                  IsHitTestVisible="False"
                                  Focusable="False"
                                  FontWeight="Bold"
                                  Margin="0,3,3,0"
                                  Style="{StaticResource ContextMenuItemStyle}" />
                        <Separator Margin="15,5,15,5" />
                        <MenuItem Header="{DynamicResource editar}"
                                  Command="{Binding AbrirEditarComando}"
                                  Style="{StaticResource ContextMenuItemStyle}" />
                        <MenuItem Header="{DynamicResource copiar}"
                                  Command="{Binding CopiarValorCelulaComando}"
                                  Style="{StaticResource ContextMenuItemStyle}" />
                        <MenuItem Header="{DynamicResource apagar}"
                                  Command="{Binding AbrirApagarComando}"
                                  Style="{StaticResource ContextMenuItemStyle}" />
                        <Separator Margin="15,5,15,5" />
                        <ItemsPresenter />
                    </StackPanel>
                </Border>
            </ControlTemplate>

            <Style x:Key="ApagarMarcadoBotaoEstilo"
                   TargetType="Button"
                   BasedOn="{StaticResource Fonte}">
                <Setter Property="DockPanel.Dock"
                        Value="Bottom" />
                <Setter Property="Padding"
                        Value="10px" />
                <Setter Property="Margin"
                        Value="5,0,5,5" />
                <Setter Property="HorizontalAlignment"
                        Value="Right" />
                <Setter Property="Visibility"
                        Value="{Binding VisibilidadeBotaoApagarSelecionado}" />
                <Setter Property="Command"
                        Value="{Binding ApagarMarcadosComando}" />
            </Style>

            <Style TargetType="View:TelaPesquisaTemplate2"
                   x:Key="Blah">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <DockPanel Background="White">
                                <StatusBar DockPanel.Dock="Bottom">
                                    <StatusBar.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                            </Grid>
                                        </ItemsPanelTemplate>
                                    </StatusBar.ItemsPanel>
                                    <StatusBarItem HorizontalAlignment="Right">
                                        <Image Height="15"
                                               Source="{Binding ImagemStatusBar, NotifyOnSourceUpdated=True}" />
                                    </StatusBarItem>
                                    <StatusBarItem Grid.Column="1"
                                                   HorizontalAlignment="Stretch">
                                        <Label HorizontalAlignment="Right"
                                               Content="{Binding MensagemStatusBar}" />
                                    </StatusBarItem>
                                </StatusBar>
                                <View:TelaPesquisaMenu DockPanel.Dock="Top"
                                                       Template="{DynamicResource TelaPesquisaMenu}"
                                                       CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=ContentControl}}">
                                </View:TelaPesquisaMenu>

                                <Button DockPanel.Dock="Bottom"
                                        Padding="10px"
                                        Margin="5,0,5,5"
                                        Content="{Binding BtnApagarMarcadoTexto, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding VisibilidadeBotaoApagarSelecionado}"
                                        Command="{Binding ApagarMarcadosComando}" />

                                <ContentControl />

                            </DockPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
