<Application x:Class="VandaModaIntimaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/VandaModaIntima.xaml">
    <Application.Resources>

        <Style x:Key="Fonte" TargetType="{x:Type Control}">
            <Setter Property="FontFamily" Value="Century Gothic" />
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style TargetType="Menu" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="DockPanel.Dock" Value="Top"/>
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="DataGrid" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="5"/>
            <Style.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Background" Value="DarkGray"/>
                    <Setter Property="Height" Value="35"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="LightGray"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource Fonte}" >
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource Fonte}" >
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="BotoesTelaInicial" TargetType="{x:Type Button}" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Black" />
            <Style.Resources>
                <Style TargetType="Label">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </Style.Resources>
        </Style>

    </Application.Resources>
</Application>
