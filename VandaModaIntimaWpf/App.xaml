<Application x:Class="VandaModaIntimaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="VandaModaIntima.xaml">
    <Application.Resources>

        <Style x:Key="Fonte" TargetType="{x:Type Control}">
            <Setter Property="FontFamily" Value="Century Gothic" />
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style TargetType="Menu" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="BotoesTelaInicial" TargetType="{x:Type Button}" BasedOn="{StaticResource Fonte}">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Black" />
        </Style>

    </Application.Resources>
</Application>
