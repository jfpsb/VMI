<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

	<class name="Loja" table="loja">
		<id name="Cnpj" column="cnpj" />
		<many-to-one name="Matriz" class="VandaModaIntimaWpf.Model.Loja" column="matriz" />
		<property name="Nome" column="nome" />
		<property name="Telefone" column="telefone" />
		<property name="Endereco" column="endereco" />
		<property name="InscricaoEstadual" column="inscricaoestadual" />
		<property name="Aluguel" />
		<property name="CriadoEm" />
		<property name="ModificadoEm" />
		<property name="DeletadoEm" />
		<property name="Deletado" />

		<bag name="Aliquotas" table="aliquotas_imposto" inverse="true" where="Deletado = false" cascade="all-delete-orphan">
			<key column="loja" />
			<one-to-many class="VandaModaIntimaWpf.Model.Loja"/>
		</bag>
	</class>

</hibernate-mapping>
