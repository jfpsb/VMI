<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

  <class name="Produto" table="produto" dynamic-insert="true" dynamic-update="true">
    <id name="Cod_Barra" column="cod_barra" />
    <many-to-one name="Fornecedor" class="VandaModaIntimaWpf.Model.Fornecedor" column="fornecedor" />
    <many-to-one name="Marca" class="VandaModaIntimaWpf.Model.Marca" column="marca" />
    <property name="Descricao" column="descricao" />
    <property name="Preco" column="preco" />
    <property name="Ncm" column="ncm" />

    <bag name="Codigos" table="cod_barra_fornecedor" inverse="false" cascade="delete">
      <key column="produto" />
      <element column="codigo" type="String" />
    </bag>
  </class>

</hibernate-mapping>
