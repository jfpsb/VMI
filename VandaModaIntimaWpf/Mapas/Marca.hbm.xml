<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

  <class name="Marca" table="marca" dynamic-insert="true" lazy="false">
    <id name="Nome" column="nome" />
    <bag name="Produtos" table="produto" lazy="true" inverse="true">
      <key column="marca" />
      <one-to-many class="VandaModaIntimaWpf.Model.Produto" />
    </bag>
  </class>

</hibernate-mapping>
