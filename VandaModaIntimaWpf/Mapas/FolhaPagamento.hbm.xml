<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

  <class name="FolhaPagamento" table="folhapagamento" lazy="false">
    <id name="Id" column="id" />
    <many-to-one name="Funcionario" class="VandaModaIntimaWpf.Model.Funcionario" lazy="false" />
    <property name="Mes" column="mes" />
    <property name="Ano" column="ano" />
    <property name="Valor" column="valor" />
    <property name="Fechada" column="fechada" />
    <bag name="Parcelas" table="parcela" inverse="true" cascade="all-delete-orphan">
      <key column="folhapagamento" />
      <one-to-many class="VandaModaIntimaWpf.Model.Parcela" />
    </bag>
  </class>

</hibernate-mapping>
