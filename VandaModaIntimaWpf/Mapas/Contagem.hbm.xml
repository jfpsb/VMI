<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

  <class name="Contagem" table="contagem" lazy="false" dynamic-insert="true">
    <composite-id>
      <key-many-to-one name="Loja" column="loja" class="VandaModaIntimaWpf.Model.Loja" />
      <key-property name="Data" column="data" />
    </composite-id>
    <many-to-one name="TipoContagem" class="VandaModaIntimaWpf.Model.TipoContagem" column="tipo" lazy="false" />
    <property name="Finalizada" column="finalizada" />

    <bag name="Contagens" table="contagem_produto" lazy="true" inverse="true">
      <key>
        <column name="contagem_loja" />
        <column name="contagem_data" />
      </key>
      <one-to-many class="VandaModaIntimaWpf.Model.ContagemProduto" />
    </bag>
  </class>

</hibernate-mapping>
