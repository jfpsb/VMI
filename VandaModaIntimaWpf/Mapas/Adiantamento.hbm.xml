<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VandaModaIntimaWpf"
                   namespace="VandaModaIntimaWpf.Model">

  <class name="Adiantamento" table="adiantamento" lazy="false">
    <id name="Id" column="id" type="Int64">
      <generator class="hilo">
        <param name="max_lo">1024</param>
      </generator>
    </id>
    <many-to-one name="Funcionario" class="VandaModaIntimaWpf.Model.Funcionario" />
    <property name="Data" column="data" />
    <property name="Valor" column="valor" />
    <property name="Descricao" column="descricao" />
    <bag name="Parcelas" table="parcela" inverse="true" cascade="all-delete-orphan">
      <key column="adiantamento" />
      <one-to-many class="VandaModaIntimaWpf.Model.Parcela" />
    </bag>
  </class>

</hibernate-mapping>
